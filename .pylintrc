[General]

init-hook='import sys; import os; sys.path.append(os.path.join("..", "python_in_action"))'
ignore=version.py

[MESSAGES CONTROL]

# do not treat TODO statements as "wrong"
disable=fixme,pointless-string-statement,line-too-long

[TYPECHECK]

ignored-classes=Fysom,MyClass
generated-members=requests.status_codes.codes.*

[SIMILARITIES]

# Minimum lines number of a similarity.
min-similarity-lines=8

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Ignore imports when computing similarities.
ignore-imports=no
